  <script>
    // Mobile nav toggle
    function toggleMenu(){
      const nav = document.getElementById('mainnav');
      const visible = nav.style.display === 'block';
      nav.style.display = visible ? 'none' : 'block';
    }
    // Start collapsed on small screens
    function initMenu(){
      if (window.innerWidth < 990){
        document.getElementById('mainnav').style.display='none';
        document.querySelector('.menu-toggle').style.display='inline-block';
      }
    }
    window.addEventListener('resize', initMenu);
    window.addEventListener('DOMContentLoaded', initMenu);

    // Save customization choices to localStorage as a simple client-side store
    function handleCustomize(e){
      e.preventDefault();
      const data = {
        timeline: document.getElementById('timelineCat').value,
        apptType: document.getElementById('apptType').value,
        extraInquiries: parseInt(document.getElementById('extraInquiries').value||'0',10)
      };
      localStorage.setItem('scr_customization', JSON.stringify(data));
      alert('Preferences saved. We\'ll confirm everything during your $150 consultation.');
    }

    // Contact form -> mailto draft
    function handleContact(e){
      e.preventDefault();
      const name = document.getElementById('cName').value.trim();
      const email = document.getElementById('cEmail').value.trim();
      const phone = document.getElementById('cPhone').value.trim();
      const msg = document.getElementById('cMsg').value.trim();
      const subject = encodeURIComponent('Website contact from '+name);
      const body = encodeURIComponent(
`Name: ${name}
Email: ${email}
Phone: ${phone}
\nIssue:\n${msg}`);
      window.location.href = `mailto:JosephStayton36@gmail.com?subject=${subject}&body=${body}`;
    }

    // Intake signature canvas
    const canvas = document.getElementById('sigCanvas');
    const ctx = canvas.getContext && canvas.getContext('2d');
    let drawing=false, last={x:0,y:0};
    if (ctx){
      canvas.addEventListener('mousedown', e=>{drawing=true; last=getPos(e)});
      canvas.addEventListener('mousemove', e=>{if(!drawing)return; drawStroke(last,getPos(e)); last=getPos(e)});
      window.addEventListener('mouseup', ()=>drawing=false);
      canvas.addEventListener('touchstart', e=>{e.preventDefault(); drawing=true; last=getPos(e.touches[0])});
      canvas.addEventListener('touchmove', e=>{e.preventDefault(); if(!drawing)return; const p=getPos(e.touches[0]); drawStroke(last,p); last=p});
      window.addEventListener('touchend', ()=>drawing=false);
    }
    function getPos(e){
      const r = canvas.getBoundingClientRect();
      return {x:e.clientX - r.left, y:e.clientY - r.top};
    }
    function drawStroke(a,b){
      ctx.lineCap='round';ctx.lineJoin='round';ctx.strokeStyle='#111';ctx.lineWidth=2.2;
      ctx.beginPath();ctx.moveTo(a.x,a.y);ctx.lineTo(b.x,b.y);ctx.stroke();
    }
    function clearSig(){ ctx && ctx.clearRect(0,0,canvas.width,canvas.height); document.getElementById('typedSig').value=''; }

    // Intake -> mailto draft (files require manual attach by the user in their mail client)
    function handleIntake(e){
      e.preventDefault();
      const fields = ['firstName','lastName','phone','email','street','city','state','zip','ssnLast4','dob','mainConcern','typedSig'];
      const data = {};
      fields.forEach(id=> data[id] = (document.getElementById(id).value||'').trim());

      // collect checked issues
      const checks = Array.from(document.querySelectorAll('#intakeForm input[type=checkbox]:checked')).map(c=>c.value).join(', ');

      // signature image as data URL (note: too large for some mail clients; included as note)
      let sigNote = '';
      try{ sigNote = canvas.toDataURL('image/png').slice(0,60) ? '[Signature captured; attach screenshot if needed]' : ''; }catch(err){ sigNote=''; }

      const subject = encodeURIComponent('New Intake – '+data.firstName+' '+data.lastName);
      const body = encodeURIComponent(
`Contact\n-------
Name: ${data.firstName} ${data.lastName}
Phone: ${data.phone}
Email: ${data.email}
Address: ${data.street}, ${data.city}, ${data.state} ${data.zip}
\nIdentity\n--------
Last 4 SSN: ${data.ssnLast4}
DOB: ${data.dob}
\nIssues (checked)\n-----------------
${checks}
\nMain Concern\n------------
${data.mainConcern}
\nAuthorizations\n--------------
[acknowledged via required checkboxes]
\nSignature\n---------
Typed: ${data.typedSig || '(n/a)'}
Canvas: ${sigNote}
\nUploads to attach manually\n--------------------------
• Government ID (front + back)\n• Proof of Address\n`);
      window.location.href = `mailto:JosephStayton36@gmail.com?subject=${subject}&body=${body}`;
    }
  </script>
</body>
</html>
